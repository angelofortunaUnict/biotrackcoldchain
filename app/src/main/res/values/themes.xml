<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BiotrakColdChain" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor">#2A2D38</item>-->
        <item name="android:statusBarColor">#161655</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextInputLayout_overlay">
        <item name="colorOnSurface">@color/white</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="TextDmSans">
        <item name="android:fontFamily">@font/dm_sans</item>
    </style>

    <style name="TextDmSans.Bold">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
    </style>

    <style name="TextDmSans.Medium">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="TextDmSans.M_16" parent="TextDmSans">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextDmSans.Bold.L_24" parent="TextDmSans.Bold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextDmSans.Medium.M_16" parent="TextDmSans.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextDmSans.Medium.L_24" parent="TextDmSans.Medium">
        <item name="android:textSize">24sp</item>
    </style>

</resources>