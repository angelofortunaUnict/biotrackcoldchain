<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_s_8"
    app:cardBackgroundColor="#4D000000"
    app:cardCornerRadius="@dimen/dimen_l_24"
    app:cardElevation="0dp"
    android:elevation="0dp"
    app:layout_constrainedWidth="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_m_16">

        <ImageView
            android:id="@+id/thermIcon"
            android:layout_width="@dimen/dimen_xxl_48"
            android:layout_height="@dimen/dimen_xxl_48"
            android:src="@drawable/ic_baseline_thermostat_24_blu"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resultNfcNotCorrectDate"
            style="@style/TextDmSans.M_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_m_16"
            android:text="12/02/2023 - 14:08:06"
            android:textColor="#B3FFFFFF"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/thermIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/resultNfcNotCorrectTemp"
            style="@style/TextDmSans.Bold.L_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_m_16"
            android:text="26Â°C"
            android:textColor="@color/white"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</androidx.cardview.widget.CardView>